                                    <label class="checkbox-inline">
                                    <input type="checkbox" id="ground_water" value="Ground Water" name="water_source"> Ground Water
                                    </label>
                                    <label class="checkbox-inline">
                                    <input type="checkbox" id="rain-water" value="Rain Water" name="water_source"> Rain Water
                                    </label>
                                    <label class="checkbox-inline">
                                    <input type="checkbox" id="lake_water" value="Lake water" name="water_source"> Lake water
                                    </label>
