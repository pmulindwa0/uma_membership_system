                    </section>
                    <!-- Step 2 -->
                    <h6>Water Supply & Consumption</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="use_water_yes">Do you use water in your process of Production?</label>
                                    <label class="radio-inline">
                                    <input type="radio" name="use_water" id="use_water_yes" value="Yes"> Yes
                                    </label>
                                    <label class="radio-inline">
                                    <input type="radio" name="use_water" id="use_water_no" value="No"> No
                                    </label>
                                </div>
                            </div>
