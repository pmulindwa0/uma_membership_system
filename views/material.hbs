<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">{{ title }}</h4> </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <!-- modal -->
        <div id="responsive-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h4 class="modal-title">ADD NEW MATERIAL</h4> </div>
                    <form method="POST" action="/materials">
                        <div class="modal-body">
                                <div class="form-group">
                                    <label for="title" class="control-label">Title:</label>
                                    <input type="text" class="form-control" id="title" name="title"> 
                                </div>
                                <div class="form-group">
                                    <label for="units" class="control-label">Units:</label>
                                    <select class="form-control" id="units" name="units">
                                        <option value="Kg">Kg</option>
                                        <option value="Meters">Meters</option>
                                        <option value="Feet">Feet</option>
                                        <option value="Litres">Litres</option>
                                    </select>
                                </div>    
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-danger waves-effect waves-light">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{!-- </MODEL> --}}
        <button type="button" data-toggle="modal" data-target="#responsive-modal" class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">Add New Material</button>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- ============================================================== -->
<!-- material table -->
<!-- ============================================================== -->
<!--.row-->
<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">AVAILABLE MATERIALS</div>
            <div class="table-responsive">
                <table class="table table-hover manage-u-table">
                    <thead>
                        <tr>
                            {{!-- <th width="70" class="text-center">#</th> --}}
                            <th>TITLE</th>
                            <th>QUANTITY IN STOCK</th>
                            <th>UNIT OF MEASUREMENT</th>
                            <th>MANAGE</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each materials }}
                        <tr>
                            {{!-- <td class="text-center">1</td> --}}
                            <td>{{ title }}</td>
                            <td>{{ numberInStock }}</td>
                            <td>{{ units }}</td>
                            <td>
                                <button type="button" class="btn btn-info btn-outline btn-circle btn-lg m-r-1 delete-material" data-id="{{id}}"><i class="ti-trash"></i></button>
                                <button type="button" class="btn btn-info btn-outline btn-circle btn-lg m-r-1"><i class="ti-pencil-alt"></i></button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--./row-->